citHeader("To cite 'beezdemand' in publications, please use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
vers <- paste("R package version", meta$Version)

citEntry(entry="Manual",
	 key = "beezdemand",
         title = "beezdemand: Behavioral Economic Easy Demand",
         author = personList(as.person("Brent Kaplan")),
         year = year,
         note = vers,

         textVersion =
         paste("Kaplan, Brent. (",
               year,
               "). beezdemand: Behavioral Economic Easy Demand. ",
               vers, ".", sep=""))
